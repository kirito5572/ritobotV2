<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>

<!--suppress XmlHighlighting -->
<configuration packagingData="true">
    <import class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"/>
    <import class="ch.qos.logback.core.rolling.RollingFileAppender"/>
    <import class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy"/>
    <import class="ch.qos.logback.core.ConsoleAppender"/>

    <appender name="STDOUT_with_jansi" class="RollingFileAppender">
        <withJansi>true</withJansi>
        <file>ritobotV2-jansi.log</file>
        <encoder class="PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>%magenta([%d{yyyy-MM-dd HH:mm:ss}]) %green([%thread]) %highlight([%-5level]) %cyan(%logger{35}) - %boldMagenta(%msg%n)</pattern>
        </encoder>
        <rollingPolicy class="SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>$/ritobotV2/with-jansi/ritobotV2.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100KB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>30MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="STDOUT" class="RollingFileAppender">
        <file>ritobotV2.log</file>
        <encoder class="PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] [%-5level] %logger{35} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>$/ritobotV2/non-jansi/ritobotV2.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100KB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>30MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="CONSOLE" class="ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder class="PatternLayoutEncoder">
            <pattern>%magenta([%d{yyyy-MM-dd HH:mm:ss}]) %green([%thread]) %highlight([%-5level]) %cyan(%logger{35}) - %boldMagenta(%msg%n)</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT_with_jansi"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>